-include $(TOPDIR)/Make.defs
include $(SDKDIR)/Make.defs

# PDM application info

PROGNAME  = $(CONFIG_EXAMPLES_PDM_DEMO_PROGNAME)
PRIORITY  = $(CONFIG_EXAMPLES_PDM_DEMO_PRIORITY)
STACKSIZE = $(CONFIG_EXAMPLES_PDM_DEMO_STACKSIZE)
MODULE    = $(CONFIG_EXAMPLES_PDM_DEMO)

# PDM application source files
#CSRCS   =  sigproc/sigproc.c sigproc/dsp_rpc.c
#CSRCS   += pdm/net.c pdm/scheduler.c pdm/api_senseye.c pdm/process.c pdm/datahandler.c pdm/config.c pdm/log.c
CSRCS   =  $(wildcard ./sigproc/*.c)
CSRCS   += $(wildcard ./pdm/*.c)
CXXSRCS =  audio/audio.cxx
MAINSRC =  pdm_demo_main.cxx

OBJFILES += $(patsubst %.c,%.o, $(CSRCS))

# Extra include directoriess

AUDIODIR = $(SDKDIR)$(DELIM)modules$(DELIM)audio

# Extra compilation flags

CXXFLAGS += ${shell $(INCDIR) $(INCDIROPT) "$(CC)" "$(AUDIODIR)"}

CXXFLAGS += -D_POSIX
CXXFLAGS += -DUSE_MEMMGR_FENCE
CXXFLAGS += -DATTENTION_USE_FILENAME_LINE

include $(APPDIR)/Application.mk

# Build DSP FFT worker

build_dsp:
	@$(MAKE) -C sigproc/dsp TOPDIR="$(TOPDIR)" SDKDIR="$(SDKDIR)" APPDIR="$(APPDIR)" CROSSDEV=$(CROSSDEV)

.built: build_dsp

clean_dsp:
	@$(MAKE) -C sigproc/dsp TOPDIR="$(TOPDIR)" SDKDIR="$(SDKDIR)" APPDIR="$(APPDIR)" CROSSDEV=$(CROSSDEV) clean

clean:: clean_dsp

